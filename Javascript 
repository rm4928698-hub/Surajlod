    <script>
        // JavaScript logic starts here
        async function handleDownload() {
            const videoUrl = document.getElementById('urlInput').value.trim();
            const quality = document.getElementById('quality').value;
            const format = document.getElementById('format').value;
            const resultArea = document.getElementById('result');
            const btn = document.getElementById('dlBtn');

            if (!videoUrl) {
                alert("कृपया पहले लिंक पेस्ट करें!");
                return;
            }

            // UI अपडेट: बटन को डिसेबल करें और लोडर दिखाएं
            btn.disabled = true;
            btn.style.opacity = "0.7";
            resultArea.innerHTML = '<div class="loader"></div><p>SurajLod सर्वर से कनेक्ट हो रहा है...</p>';

            // बैकअप सर्वर्स की लिस्ट (Failover Mechanism)
            const apiServers = [
                "https://api.cobalt.tools/api/json",
                "https://cobalt.api.unblock.it/api/json"
            ];

            let isSuccess = false;

            for (let api of apiServers) {
                if (isSuccess) break;

                try {
                    const response = await fetch(api, {
                        method: "POST",
                        headers: {
                            "Accept": "application/json",
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({
                            url: videoUrl,
                            videoQuality: quality,
                            downloadMode: format,
                            filenameStyle: "pretty"
                        })
                    });

                    const data = await response.json();

                    if (data.url) {
                        resultArea.innerHTML = `
                            <p style="color: #22c55e; margin-bottom:10px;">फाइल मिल गई है!</p>
                            <a href="${data.url}" class="dl-success" target="_blank" rel="noopener">अभी गैलरी में सेव करें</a>
                        `;
                        isSuccess = true;
                    }
                } catch (err) {
                    console.error("Server failed: ", api);
                }
            }

            if (!isSuccess) {
                resultArea.innerHTML = "<p style='color: #ff4444;'>माफ़ी! सभी सर्वर व्यस्त हैं। कृपया 10 सेकंड बाद फिर से कोशिश करें।</p>";
            }

            // बटन को वापस ठीक करें
            btn.disabled = false;
            btn.style.opacity = "1";
        }
    </script>
</body>
